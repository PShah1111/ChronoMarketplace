@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4"><img src="~/images/chrono marketplace logo - no background.png" alt="Chrono Marketplace Logo" width="350" /></h1>
</div>
    
    






<!-- Carousel -->
<div id="HomePage" class="carousel slide carousel-shadow" data-bs-ride="carousel">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#HomePage" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#HomePage" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#HomePage" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#HomePage" data-bs-slide-to="3"></button>
     </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">    
        <div class="carousel-item active">
            <img src="~/Images/Rolex.jpg" alt="Rolex" class="d-block">
        </div>
        <div class="carousel-item">
            <img src="~/Images/PatekPhillipe.jpg" alt="Patek Philippe" width="1280" height="853"> 
        </div>
        <div class="carousel-item">
            <img src="~/Images/AudemarsPiguet1.jpg" alt="Audemars Piguet" width="1280" height="853">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Omega.jpg" alt="Omega" width="1280" height="853">
        </div>
       </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#HomePage" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#HomePage" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Chrono Marketplace About Us Statement -->
<center> <div class="container.sm p-5 my-5 bg-dark text-white col-md-8 rounded">
    <h2> <center> Why Choose Chrono Marketplace </center> </h2>

        
    <p>
        <center> Discover Chrono Marketplace, your top choice for buying and selling timepieces. Our platform provides a seamless shopping experience with a wide variety of luxury and everyday watches, trusted sellers, and a user-friendly interface, all supported by secure transactions and expert advice.
            Become a part of our lively group of watch enthusiasts and collectors now, and enhance your journey in the world of horology with Chrono Marketplace. </center>
    </p>
    </div>
</center>
