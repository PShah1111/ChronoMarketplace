@model IEnumerable<ChronoMarketplace.Models.ShoppingOrder>

@{
    ViewData["Title"] = "Shopping Orders";
    
}

<h1>Shopping Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orderdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totalprice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShoppingFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orderdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totalprice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShoppingOrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShoppingOrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShoppingOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
