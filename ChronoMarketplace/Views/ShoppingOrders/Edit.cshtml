@model ChronoMarketplace.Models.ShoppingOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Home/Accessories.cshtml";
}

<h1>Edit</h1>

<h4>ShoppingOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShoppingOrderId" />
            <div class="form-group">
                <label asp-for="CartId" class="control-label"></label>
                <input asp-for="CartId" class="form-control" />
                <span asp-validation-for="CartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orderdate" class="control-label"></label>
                <input asp-for="Orderdate" class="form-control" />
                <span asp-validation-for="Orderdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shipmentdate" class="control-label"></label>
                <input asp-for="Shipmentdate" class="form-control" />
                <span asp-validation-for="Shipmentdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentID" class="control-label"></label>
                <select asp-for="PaymentID" class="form-control" asp-items="ViewBag.PaymentID"></select>
                <span asp-validation-for="PaymentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
